<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jaureguialzo.pruebaacelerometro.MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:text="AcelerÃ³metro"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            tools:layout_editor_absoluteX="88dp"
            tools:layout_editor_absoluteY="111dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/labelX"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="labelX"
                android:textAlignment="center"
                tools:layout_editor_absoluteX="156dp"
                tools:layout_editor_absoluteY="227dp" />

            <TextView
                android:id="@+id/labelY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="labelY"
                android:textAlignment="center"
                tools:layout_editor_absoluteX="88dp"
                tools:layout_editor_absoluteY="227dp" />

            <TextView
                android:id="@+id/labelZ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="labelZ"
                android:textAlignment="center"
                tools:layout_editor_absoluteX="117dp"
                tools:layout_editor_absoluteY="175dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <SeekBar
                android:id="@+id/seekBarH"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:max="100"
                android:progress="50" />

            <SeekBar
                android:id="@+id/seekBarV"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:max="100"
                android:progress="50"
                android:rotation="90" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <Button
                android:id="@+id/botonIniciar"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Iniciar" />

            <Switch
                android:id="@+id/enviar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:switchPadding="5dp"
                android:text="Enviar al servidor" />

            <TextView
                android:id="@+id/servidor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IP: 192.168.1.100"
                android:textSize="10dp" />

            <Button
                android:id="@+id/botonParar"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Parar" />
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
